{
    "name": "drupol/phpcsfixer-configs-php",
    "description": "Base PHP CS Fixer configurations.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Pol Dellaiera",
            "email": "pol.dellaiera@protonmail.com"
        }
    ],
    "require": {
        "php": ">= 7.4",
        "friendsofphp/php-cs-fixer": "^3.35.1",
        "symfony/yaml": "^3 || ^4 || ^5 || ^6"
    },
    "autoload": {
        "psr-4": {
            "drupol\\PhpCsFixerConfigsPhp\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "drupol\\PhpCsFixerConfigsPhp\\Tests\\": "./tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpro/grumphp": true
        }
    },
    "require-dev": {
        "ext-pcov": "*",
        "friends-of-phpspec/phpspec-code-coverage": "^6",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpro/grumphp": "1.1.* || 1.3.* || 1.4.* || 1.13.*",
        "phpspec/phpspec": "^7"
    },
    "scripts": {
        "grumphp": "./vendor/bin/grumphp run",
        "changelog-unreleased": "auto-changelog -c .auto-changelog -u",
        "changelog-version": "auto-changelog -c .auto-changelog -v"
    },
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/drupol"
        }
    ]
}
